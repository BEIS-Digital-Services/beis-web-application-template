@{
    ViewData["Title"] = WebsiteConstnats.ProgramName;
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-l">Welcome to the @WebsiteConstnats.ProgramName website.</h1>
        <p class="govuk-body-l">Customize this as necessary</p>
        <p class="govuk-body-s">For more information see the beis common nuget package</p>

        <a role="button" draggable="false" class="govuk-button govuk-!-margin-top-2 govuk-!-margin-bottom-8 govuk-button--start" data-module="govuk-button" asp-route="@RouteNames.ApplicantFullNamePage">
            Register your account
            <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" aria-hidden="true" focusable="false">
                <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z" data-darkreader-inline-fill="" style="--darkreader-inline-fill:currentColor;"></path>
            </svg>
        </a>
        <br />
        <br />
        <a role="button" draggable="false" class="govuk-button govuk-!-margin-top-2 govuk-!-margin-bottom-8 govuk-button--start" data-module="govuk-button" asp-route="@RouteNames.RetrieveEmailAddressPage">
            Retrieve your account
            <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" aria-hidden="true" focusable="false">
                <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z" data-darkreader-inline-fill="" style="--darkreader-inline-fill:currentColor;"></path>
            </svg>
        </a>
    </div>
</div>

